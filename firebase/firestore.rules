rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() {
      return request.auth != null;
    }
    function isOwner(ownerId) {
      return isAuthed() && request.auth.uid == ownerId;
    }
    function restaurantExists(rid) {
      return exists(/databases/$(database)/documents/restaurants/$(rid));
    }

    match /restaurants/{restaurantId} {
      allow read: if true;
      allow create, update, delete: if isOwner(restaurantId)
        && request.resource.data.ownerId == request.auth.uid
        && request.resource.data.name is string
        && request.resource.data.slug is string
        && request.resource.data.createdAt is number;
    }

    match /products/{productId} {
      allow read: if resource.data.isAvailable == true || isOwner(resource.data.restaurantId);
      allow create: if isAuthed()
        && request.resource.data.restaurantId == request.auth.uid
        && request.resource.data.name is string
        && request.resource.data.price is number
        && request.resource.data.isAvailable is bool;
      allow update, delete: if isOwner(resource.data.restaurantId);
    }

    match /orders/{orderId} {
      // Création possible par clients non authentifiés ou par le vendeur
      // (Validation simplifiée du premier item pour compatibilité règles)
      allow create: if restaurantExists(request.resource.data.restaurantId)
        && request.resource.data.items is list
        && request.resource.data.items.size() > 0
        && request.resource.data.status in ['pending','preparing','ready','served']
        && request.resource.data.orderNumber is string
        && request.resource.data.createdAt is number
        && request.resource.data.items[0] is map
        && request.resource.data.items[0].productId is string
        && request.resource.data.items[0].quantity is number
        && request.resource.data.items[0].price is number
        && request.resource.data.items[0].name is string;
      allow read, update: if isOwner(resource.data.restaurantId);
      allow delete: if false;
    }
  }
}
